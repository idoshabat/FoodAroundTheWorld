<% layout('layouts/basic') %>
<h1>
    All of our recipes
</h1>

<div>
    <a href="/foods/new">Create new Food</a>
</div>

<% for(let food of foods) { %>
    <div class="card" mb-3>
        <div class="row">
            <div class="col-md-4">
                <img src="<%=food.image%>" alt="" class="img-fluid">
            </div>
            <div class="col-md-8">
                <div class="card-body">
                    <h5 class="card-title"><%=food.name%></h5>
                    <p class="card-text"><%=food.foodType%></p>
                    <p class="card-text">
                        <small class="text-muted"><%=food.recipe%></small>
                    </p>
                    <a class="btn btn-primary" href="/foods/<%=food._id%>/show">View <%food.name%></a>
                </div>
            </div>
        </div>
    </div>
    <% } %>