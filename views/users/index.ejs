<% layout('layouts/basic') %>
<h1>
    All Users
</h1>

<div>
    <a href="/users/register">Create new User</a>
</div>

<% for(let user of users) { %>
    <div class="card" mb-3>
        <div class="row">
            <div class="col-md-4">
                <img src="<%=user.image%>" alt="" class="img-fluid">
            </div>
            <div class="col-md-8">
                <div class="card-body">
                    <h5 class="card-title"><%=user.firstName%></h5>
                    <p class="card-text"><%=user.lastName%></p>
                    <p class="card-text">
                        <small class="text-muted"><%=user.email%></small>
                    </p>
                    <a class="btn btn-primary" href="users/show/<%=user._id%>">View <%user.firstName%></a>
                </div>
            </div>
        </div>
    </div>
    <% } %>